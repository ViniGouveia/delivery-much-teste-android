<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/repository_details_iv_owner_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/bottom_sheet_dialog_background"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/spacing_large"
        android:paddingTop="@dimen/spacing_huge"
        android:paddingBottom="@dimen/spacing_large">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:layout_marginBottom="@dimen/spacing_tiny"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextDark16.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/repository_details_tv_owner_name" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/repository_details_tv_visit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_small"
                android:text="@string/repository_details_tv_visit_profile"
                android:textColor="@color/link_color" />

        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/repository_details_tv_owner_name"
            style="@style/TextDark14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            tools:text="José da silva" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/TextDark16.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_tiny"
            android:text="@string/repository_details_tv_repository_name" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/repository_details_tv_repository_name"
            style="@style/TextDark14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            tools:text="Projeto A" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/TextDark16.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_tiny"
            android:text="@string/repository_details_tv_repository_details" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/repository_details_tv_repository_details"
            style="@style/TextDark14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Descrição do projeto A" />

    </LinearLayout>

</RelativeLayout>
