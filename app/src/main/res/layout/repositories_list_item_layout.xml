<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/spacing_tiny"
    android:elevation="@dimen/spacing_small"
    app:cardCornerRadius="@dimen/spacing_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/repositories_search_field_background"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/spacing_small"
        android:paddingVertical="@dimen/spacing_small">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/repositories_list_item_tv_name"
            style="@style/TextDark16.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Projeto A" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/repositories_list_item_tv_owner"
            style="@style/TextDark14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="JosÃ© Dias" />

    </LinearLayout>

</androidx.cardview.widget.CardView>