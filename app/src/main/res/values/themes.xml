<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary000</item>
        <item name="colorPrimaryDark">@color/primary900</item>
        <item name="colorAccent">@color/primary000</item>
        <item name="windowNoTitle">true</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>
    </style>
    <!-- Base application theme. -->

    <style name="PrimaryButton">
        <item name="android:backgroundTint">@color/primary000</item>
        <item name="cornerRadius">@dimen/spacing_small</item>
        <item name="android:textColor">@color/primary900</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">@dimen/spacing_mini</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:spacing">0.8dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_dialog_background</item>
    </style>
</resources>